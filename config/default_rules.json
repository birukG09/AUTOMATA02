[
  {
    "name": "PDF Invoices to Finance",
    "priority": 10,
    "active": true,
    "when": {
      "filename_regex": "invoice|bill|statement|receipt",
      "mime_in": ["application/pdf"]
    },
    "then": {
      "label": "finance",
      "tags_add": ["invoice", "pdf"],
      "move_to": "{{HOME}}/AutomataOrganized/Finance/{{YYYY}}/{{MM}}"
    }
  },
  {
    "name": "Bank Statements",
    "priority": 15,
    "active": true,
    "when": {
      "filename_regex": "statement|bank.*statement",
      "mime_in": ["application/pdf"]
    },
    "then": {
      "label": "finance",
      "tags_add": ["bank-statement", "pdf"],
      "move_to": "{{HOME}}/AutomataOrganized/Finance/Statements/{{YYYY}}"
    }
  },
  {
    "name": "Images to Media",
    "priority": 20,
